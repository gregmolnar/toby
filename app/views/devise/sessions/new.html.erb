<div class="sign_in">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <h2>Sign in</h2>
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean, :wrapper => :vertical_boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Sign in", class: 'btn btn-success' %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    <% end -%>
  <% end %>
  <div class="modal-footer">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        Don't have an account yet? Click here to <%= link_to "Register", new_registration_path(resource_name), class: '' %> one.<br />
      <% end -%>
    </div>
</div>
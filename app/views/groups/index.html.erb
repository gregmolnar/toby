<h1>Groups</h1>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td>
          <%= link_to 'Show', group, class: 'btn-sm btn-primary'%>
          <%= link_to 'Edit', edit_group_path(group), class: 'btn-sm btn-warning' %>
          <%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Group', new_group_path %>

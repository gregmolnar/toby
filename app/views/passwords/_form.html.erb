<%= simple_form_for(@password, class: 'password-form') do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :url %>
    <%= f.input :comment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
